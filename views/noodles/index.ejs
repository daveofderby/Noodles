<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="list-container">
  <h1>Oodles of Noodles</h1>

  <% for (let noodle of noodles){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <%if(noodle.images.length) {%>
        <img class="img-fluid" alt="" src="<%=noodle.images[0].url%>" />

        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= noodle.title %></h5>

          <p class="card-text"><%= noodle.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= noodle.location%></small>
          </p>
          <a class="btn btn-primary" href="/noodles/<%=noodle._id%>"
            >View <%=noodle.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const noodles = { features: <%- JSON.stringify(noodles) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
